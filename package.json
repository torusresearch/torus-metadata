{
  "name": "torus-metadata",
  "version": "1.0.0",
  "description": "Torus metadata server",
  "main": "index.js",
  "scripts": {
    "dev": "docker-compose -f docker-compose.dev.yml up --build",
    "down": "docker-compose -f docker-compose.dev.yml down",
    "serve": "nodemon --config nodemon.json src/index.ts",
    "build": "rimraf ./dist && tsc",
    "start": "ts-node src/index.ts",
    "prod": "node dist/index.js",
    "migrate": "npx knex migrate:unlock --knexfile ./src/database/knexfile.ts && npx knex migrate:latest --knexfile ./src/database/knexfile.ts",
    "migrate:down": "npx knex migrate:down --knexfile ./src/database/knexfile.ts",
    "lint:ts": "eslint --fix 'src/**/*.ts'",
    "prepare": "husky install",
    "test": "cross-env NODE_ENV=development METADATA_ENV=development LOG_DEBUG=yes mocha",
    "test:ci": "docker-compose -f docker-compose-ci.yml up --build --abort-on-container-exit --exit-code-from torus-metadata",
    "down:ci": "docker-compose -f docker-compose-ci.yml down"
  },
  "keywords": [],
  "author": "Chaitanya Potti",
  "license": "ISC",
  "dependencies": {
    "@babel/runtime": "^7.24.4",
    "@sentry/node": "^7.111.0",
    "@sentry/tracing": "^7.111.0",
    "@sesamecare-oss/redlock": "^1.2.1",
    "@socket.io/redis-adapter": "^8.3.0",
    "@toruslabs/eccrypto": "^4.0.0",
    "@toruslabs/loglevel-sentry": "^6.1.3",
    "celebrate": "^15.0.3",
    "cids": "^1.1.9",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "elliptic": "^6.5.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "js-sha3": "^0.9.3",
    "json-stable-stringify": "^1.1.1",
    "knex": "^2.5.1",
    "knex-on-duplicate-update": "^2.3.2",
    "loglevel": "^1.9.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "multihashing-async": "^2.1.4",
    "mysql2": "3.9.5",
    "redis": "^4.6.13",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "@tkey/storage-layer-torus": "^12.1.0",
    "@toruslabs/config": "^2.0.2",
    "@toruslabs/eslint-config-node": "^3.2.0",
    "@types/compression": "^1.7.5",
    "@types/elliptic": "^6.4.18",
    "@types/express": "^4.17.21",
    "@types/json-stable-stringify": "^1.0.36",
    "@types/mocha": "^10.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "atob": "^2.1.2",
    "btoa": "^1.2.1",
    "chai": "^4.4.1",
    "chai-http": "^4.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "mocha": "^10.4.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "wait-port": "^1.1.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/torusresearch/torus-metadata.git"
  },
  "bugs": {
    "url": "https://github.com/torusresearch/torus-metadata/issues"
  },
  "homepage": "https://github.com/torusresearch/torus-metadata#readme",
  "engines": {
    "node": ">=16.18.1",
    "npm": ">=8.x"
  }
}
